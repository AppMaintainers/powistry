class User < ActiveRecord::Base
  attr_accessible :admin, :monogram, :name
  has_many :tasks
  
  validates :name, :presence => true
  before_validation :update_monogram
    
  def update_monogram
    if name_changed?
      self.monogram = name.split.map{|word| word.first}.join.upcase
    end
  end
end
