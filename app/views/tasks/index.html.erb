<h1>Listing tasks</h1>

<%= link_to 'New Task', new_project_task_path(@project), class: "btn" %>

<br />
<br />

<table class = "table table-striped">
  <tr>
    <th>User</th>
    <th>Project</th>
    <th>Final complexity</th>
    <th>Corrected complexity</th>
    <th>Name</th>
    <th>Description</th>
    <th>Url</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Invoice number</th>
    <th>Invested hours</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <% unless task.user.nil? -%>
      <td class="avatar_name"><%= image_tag avatar_url(task.user,40) %> <br/>
      <%= task.user.name.split.first %></td>
    <% else -%>
      <td></td>
    <% end -%>
    <td><%= task.project.name %></td>
    <td><%= get_average_points(task.estimations)%></td>
    <td><%= task.corrected_complexity.try %></td>
    <td><%= task.name %></td>
    <td><%= task.description[(0..15)] %><%= content_tag(:span, ' ...', {:title => task.description, :rel => 'tooltip', "data-placement" => 'bottom'}) if task.description.length > 15 %> </td>
    <% unless task.url.nil? || task.url.empty? -%>
      <td><%= link_to image_tag("#{root_url}url-icon.png"), task.url, :target => "_blank" %></td>
    <% else -%>
      <td></td>
    <% end -%>
    <td><%= task.start_date %></td>
    <td><%= task.end_date %></td>
    <td><%= task.invoice_number %></td>
    <td><%= task.invested_hours %></td>
    <td><%= link_to 'Edit', edit_project_task_path(task.project, task), class: "btn" %></td>
    <% if task.start_date.nil? -%>
      <td><%= link_to "Start", project_task_path(task.project, task, :task => { :start_date => Date.today}) , :method => 'put', class: "btn" %></td>
    <% elsif task.end_date.nil? -%>
      <td><%= link_to "Close", project_task_path(task.project, task, :task => { :end_date => Date.today}) , :method => 'put', class: "btn" %></td>
    <% end -%>
    <% if task.end_date.nil? && task.estimations.find_by_user_id(current_user.id).complexity.nil? -%>
      <td><%= link_to 'Estimate', edit_project_task_path(task.project, task), class: "btn" %></td>
    <% end -%>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Task', new_project_task_path(@project), class: "btn" %>
