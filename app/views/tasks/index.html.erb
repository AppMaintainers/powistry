<h1><%= @project.name %></h1>

<%= link_to 'New Task', new_project_task_path(@project), class: "btn" %>

<br />
<br />

<table class = "table table-striped">
  <tr>
    <th style="width:10%">User</th>
    <th style="width:50%">Name</th>
    <th style="width:10%">Url</th>
    <th style="width:10%"></th>
    <th style="width:10%"></th>
    <th style="width:10%"></th>
  </tr>

<% @tasks.opened(Date.today).each do |task| %>
  <%= render 'index_table', :task => task, :table_color => "success" %>
<% end %>
<% @tasks.not_yet_opened.each do |task| %>
  <%= render 'index_table', :task => task, :table_color => "error" %>
<% end %>
<% @tasks.closed(Date.today).each do |task| %>
  <%= render 'index_table', :task => task, :table_color => "" %>
<% end %>

</table>

<br />

<%= link_to 'New Task', new_project_task_path(@project), class: "btn" %>
