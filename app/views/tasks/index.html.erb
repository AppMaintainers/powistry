<h1>Listing tasks</h1>

<table>
  <tr>
    <th>User</th>
    <th>Project</th>
    <th>Complexity start</th>
    <th>Complexity end</th>
    <th>Name</th>
    <th>Description</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Invoice number</th>
    <th>Invested hours</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.user %></td>
    <td><%= task.project %></td>
    <td><%= task.complexity_start %></td>
    <td><%= task.complexity_end %></td>
    <td><%= task.name %></td>
    <td><%= task.description %></td>
    <td><%= task.start_date %></td>
    <td><%= task.end_date %></td>
    <td><%= task.invoice_number %></td>
    <td><%= task.invested_hours %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

