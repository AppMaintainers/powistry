<%= simple_form_for(@estimation) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <label>Project</label>
    <%= @estimation.task.project.name %>
    <label>Task</label>
    <%= @estimation.task.name %>
    <label>Description</label>
    <%= @estimation.task.description %>
    <%= f.association :complexity %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
