<%= simple_form_for(@estimation) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <label>Project</label>
    <p><%= @estimation.task.project.name %></p>
    <label>Task</label>
    <p><%= @estimation.task.name %></p>
    <label>Description</label>
    <p><%= @estimation.task.description %></p>
    <%= f.association :complexity, :collection => Complexity.all(:order => 'points')%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
